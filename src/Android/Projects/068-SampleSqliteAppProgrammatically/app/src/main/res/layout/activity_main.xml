<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/mainActivityButtonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_register_text" />

    <Button
        android:id="@+id/mainActivityButtonAllUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_allusers_text" />

    <Button
        android:id="@+id/mainActivityButtonExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_exit_text" />
</LinearLayout>